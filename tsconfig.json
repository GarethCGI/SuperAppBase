{
	"compilerOptions": {
		"noEmitHelpers": true,
		"target": "ES6",
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"strict": true,
		"skipLibCheck": true,
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"types": [
			"bun-types" // add Bun global
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
		},
		"outDir": "./dist",
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/web/**/*"
	]
}